<config>
    <sections>
        <general>
            <groups>
                <vietnamese_province_district translate="label">
                    <label>Vietnamese Provinces and Districts</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <allow_region translate="label">
                            <label>Allowed Provinces</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_region</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_region>
                        <allow_district translate="label">
                            <label>Allowed Districts</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_district</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_district>
                    </fields>
                </vietnamese_province_district>
            </groups>
        </general>
    </sections>
</config>
